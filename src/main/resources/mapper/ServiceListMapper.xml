    <select id="selectList" resultType="com.cykj.domestic.entity.TbService" parameterType="com.cykj.domestic.entity.TbService">
        select a.* ,b.type_name serviceCategory from tb_service a INNER JOIN  tb_service_type b
        limit #{start},#{pageSize}
    </select>

    <select id="selectListCount" resultType="int" parameterType="com.cykj.domestic.entity.TbService">
       select count(A.id) from (select a.* ,b.type_name serviceCategory from tb_service a INNER JOIN  tb_service_type b)A
