<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cykj.domestic.mapper.UserClockMapper">

    <!--    查询用户积分-->
    <select id="queryIntegral" parameterType="com.cykj.domestic.entity.UserClock" resultType="int">
        SELECT integral FROM tb_user_clock where id = #{id}
    </select>

    <!--    查询用户连续签到天数-->
    <select id="queryContinuousSign" parameterType="com.cykj.domestic.entity.UserClock" resultType="int">
        SELECT continuous_sign FROM tb_user_clock where id = #{id}
    </select>

</mapper>